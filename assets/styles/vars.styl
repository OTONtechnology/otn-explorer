$colorFiller = #fff;
$colorFontBase = #182F37;
$colorBg = #F0EDEA;
$colorLink = #028dc9;
$colorDanger = #ef616a;
$colorSuccess = #2aa414;

transactionsGrid() {
  grid-template-columns: 58px 75px 335px 93px 180px 10px 180px 82px;
  @media (min-width: $mediaSizes.large) {
    grid-template-columns: 58px 75px 320px 110px 168px 10px 168px 120px;
    // grid-template-columns: 58px 75px 320px 110px max-content 10px max-content 120px;
  }
}

adressGrid() {
  grid-template-columns: 57px 83px 327px 92px 327px auto;
  @media (min-width: $mediaSizes.large) {
    grid-template-columns: 57px 83px 327px 92px 327px auto;
  }
}

$mediaSizes = {
  phoneS: 374px,
  phone: 480px,
  tablet: 799px,
  desktop: 992px,
  large: 1025px,
  extraLarge: 1280px,
  giant: 1600px
};

getMedia(fromSize, toSize = false) {
  if (toSize) {
    @media (min-width: fromSize) and (max-width: toSize) {
      {block};
    }
  } else {
    @media (min-width: fromSize) {
      {block};
    }
  }
}

mediaPhone() {
  +getMedia($mediaSizes.phone) {
    {block};
  }
}

mediaPhoneS() {
  +getMedia($mediaSizes.phoneS) {
    {block};
  }
}

mediaTablet() {
  +getMedia($mediaSizes.tablet) {
    {block};
  }
}

mediaDesktop() {
  +getMedia($mediaSizes.desktop) {
    {block};
  }
}

mediaLarge() {
  +getMedia($mediaSizes.large) {
    {block};
  }
}

mediaExtraLarge() {
  +getMedia($mediaSizes.extraLarge) {
    {block};
  }
}

mediaGiant() {
  +getMedia($mediaSizes.giant) {
    {block};
  }
}

$fontSizes = {
  desktop: {
    h1: 40px,
    h2: 24px,
    h3: 20px,
    text: 14px,
    small: 10px,
    subtitle: 12px,
    button: 16px
    transactionButton: 14px
  },
  mobile: {
    h1: 32px,
    h2: 22px,
    h3: 18px,
    text: 12px,
    small: 10px,
    subtitle: 12px,
    button: 14px
    transactionButton: 14px
  }
};

getFont(name = 'text') {
  font-size: $fontSizes.mobile[name];

  +mediaTablet() {
    font-size: $fontSizes.desktop[name];
  }
}

getFontH1() {
  getFont('h1');
  font-weight: 700;
  text-transform: uppercase;
  margin: 0;
}

getFontH2() {
  getFont('h2');
  font-weight: 700;
  margin: 0;
}

getFontH3() {
  getFont('h3');
  font-weight: 700;
  margin: 0;
}

getFontText() {
  getFont('text');
}

getFontSmall() {
  getFont('small');
}

getFontSubtitle() {
  getFont('subtitle');
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.77px;
}

getFontButton() {
  getFont('button');
  font-weight: 700;
}
